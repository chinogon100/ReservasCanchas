<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ReservasCanchas">
	
	<jta-data-source>java:jboss/datasources/ReservasCanchas</jta-data-source>
	<class>ec.edu.ups.canchas.objetos.Canchas</class>
	<class>ec.edu.ups.canchas.objetos.Noticias</class>
	<class>ec.edu.ups.canchas.objetos.Observaciones</class>
	<class>ec.edu.ups.canchas.objetos.Persona</class>
	<class>ec.edu.ups.canchas.objetos.Reservas</class>
	<class>ec.edu.ups.canchas.objetos.Roles</class>
	<class>ec.edu.ups.canchas.objetos.Usuario</class>
		  
	    <exclude-unlisted-classes>false</exclude-unlisted-classes>
	     
	    <properties>
	         <!-- Properties for Hibernate -->
	        <property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
	         
	    </properties>
	
	
	</persistence-unit>
</persistence>
